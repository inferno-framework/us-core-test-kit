require_relative '../../../reference_resolution_test'
require_relative '../resource_list'

module USCoreTestKit
  module <%= module_name %>
    class <%= class_name %> < Inferno::Test
      include USCoreTestKit::ReferenceResolutionTest
      include ResourceList

      title 'MustSupport references within <%= resource_type %> resources can be read'
      description %(
        This test will attempt to read MustSupport references found in the
        resources from the first search. This test will look through the <%= resource_type %> resources
        found previously for the following must support elements:

  <%= must_support_reference_list_string %>
      )

      id :<%= test_id %>

      def resource_type
        '<%= resource_type %>'
      end

      def self.metadata
        @metadata ||= Generator::GroupMetadata.new(YAML.load_file(File.join(__dir__, 'metadata.yml')))
      end

      def scratch_resources
        scratch[:<%= profile_identifier %>_resources] ||= {}
      end

      run do
        perform_reference_resolution_test(<%= resource_collection_string %>)
      end
    end
  end
end
