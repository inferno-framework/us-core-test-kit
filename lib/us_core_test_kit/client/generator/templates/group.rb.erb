# frozen_string_literal: true

<%- test_file_list.each do |file_name| -%>
require_relative '<%= file_name %>'
<%- end -%>

module USCoreTestKit
  module Client
    module <%= module_name %>
      class <%= class_name %> < Inferno::TestGroup
        id :<%= group_id %>
        title '<%= title %>'
        description %(
          <%= description %>
        )
        optional <%= conformance_optional? %>
        run_as_group

        test from: :<%= test_id_list.find { |test| test.include?('_client_support_test')} %>
        <%- test_id_list.each do |test| next if test.include?('_client_support_test') -%>
        test from: :<%= test %>
        <%- end -%>
      end
    end
  end
end
